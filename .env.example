# Ambiente da Aplicação
NODE_ENV=development

# Servidor
PORT=3000
API_URL=http://localhost:3000

# Configuração do banco de dados MySQL
DATABASE_URL="mysql://user:password@localhost:3306/api_projeto"

# Configuração do Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configurações JWT
JWT_SECRET=suaChaveSecretaAqui
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Logs
LOG_LEVEL=info
LOG_FORMAT=dev # dev ou combined

# CORS
CORS_ORIGIN=http://localhost:3000

# Segurança
BCRYPT_SALT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=15*60*1000 # 15 minutos
RATE_LIMIT_MAX=100 # 100 requisições por janela