{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/logs/*",
    "node_modules"
  ],
  "exec": "ts-node -r tsconfig-paths/register --transpile-only src/server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "colours": true,
  "verbose": true,
  "delay": 500,
  "signal": "SIGTERM"
}
